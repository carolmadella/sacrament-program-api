<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fetch Data</title>
</head>
<body>
  <h1>Fetch Come Follow Me Data</h1>
  <form action="/fetch-data" method="POST">
    <label for="weekNum">Week Number:</label>
    <input type="number" id="weekNum" name="weekNum" value="<%= currentWeek %>" required>
    <button type="submit">Fetch Data</button>
  </form>
  <h2>Data Table</h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Reference</th>
        <th>Link</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(item => { %>
        <tr>
          <td><%= item.date %></td>
          <td><%= item.title %></td>
          <td><%= item.reference %></td>
          <td><a href="<%= item.link %>">Link</a></td>
          <td>
            <form action="/delete-data/<%= item._id %>" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
            <form action="/edit-data/<%= item._id %>" method="GET" style="display:inline;">
              <button type="submit">Edit</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
